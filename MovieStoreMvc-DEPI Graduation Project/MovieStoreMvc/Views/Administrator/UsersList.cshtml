@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users List</h1>

<div class="col-md-12">
    <div class="float-end btn btn-default">
        <a asp-action="" class="text-light" style="text-decoration:none">Add User</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @string.Join("-",item.Roles)
                </td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@item.Id" class="btn btn-default">Manage Roles</a>
                    <a asp-action="ChangePassword" class="btn btn-default">Change Password</a>
                </td>
            </tr>
        }
    </tbody>
</table>