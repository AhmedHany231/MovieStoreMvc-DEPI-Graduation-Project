@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_AccountLayout";

}

<div class="center-block">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card" style="border-color:white">
                <h2 class="card-title text-center">Registeration</h2>
                <div class="card-body py-md-4">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mt-1">
                            <label asp-for="UserName" class="control-label"></label>

                            <input asp-for="UserName" class="form-control" placeholder="User Name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-1">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="User Name" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-1">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="User Name" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-1">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="User Name" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div id="buttons" class="form-group mt-3 float-end">
                            <input type="submit" value="Register" class="btn btn-success " />
                            <a id="cancel" asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

